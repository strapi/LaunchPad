{
  "kind": "collectionType",
  "collectionName": "form_configs",
  "info": {
    "singularName": "form-config",
    "pluralName": "form-configs",
    "displayName": "form-config",
    "description": "Configuration des formulaires dynamiques avec intégration Vtiger ou autre"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "formName": {
      "type": "string",
      "maxLength": 100,
      "required": true,
      "unique": true
    },
    "title": {
      "type": "string",
      "required": false
    },
    "description": {
      "type": "text"
    },
    "submitButtonText": {
      "type": "string",
      "default": "Envoyer"
    },
    "successMessage": {
      "type": "string",
      "default": "Formulaire envoyé avec succès !"
    },
    "errorMessage": {
      "type": "string",
      "default": "Erreur lors de l'envoi du formulaire"
    },
    "vtigerEndpoint": {
      "type": "string",
      "required": false
    },
    "vtigerModuleType": {
      "type": "enumeration",
      "default": "Leads",
      "enum": [
        "Leads",
        "Contacts"
      ]
    },
    "vtigerMapping": {
      "type": "json",
      "required": true
    },
    "fields": {
      "type": "json",
      "required": true
    },
    "displayConfig": {
      "type": "json"
    }
  }
}
