{
  "kind": "collectionType",
  "collectionName": "clients",
  "info": {
    "singularName": "client",
    "pluralName": "clients",
    "displayName": "Client",
    "description": "Coaching clients managed by Dr. Peter Sung"
  },
  "options": {
    "increments": true,
    "timestamps": ["createdAt", "updatedAt"],
    "draftAndPublish": false
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "firstName": {
      "type": "string",
      "required": true,
      "minLength": 1
    },
    "lastName": {
      "type": "string",
      "required": true,
      "minLength": 1
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "phone": {
      "type": "string"
    },
    "company": {
      "type": "string"
    },
    "jobTitle": {
      "type": "string"
    },
    "status": {
      "type": "enumeration",
      "enum": ["active", "inactive", "prospective"],
      "default": "active",
      "required": true
    },
    "notes": {
      "type": "richtext"
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "sessions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::session.session",
      "mappedBy": "client"
    },
    "resources": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::resource.resource",
      "inversedBy": "clients"
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "tags": {
      "type": "string"
    },
    "startDate": {
      "type": "date"
    }
  }
}
