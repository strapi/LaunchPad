{
  "formName": "contact-form",
  "title": "Contactez-nous",
  "description": "Remplissez ce formulaire et nous vous répondrons dans les plus brefs délais",
  "submitButtonText": "Envoyer ma demande",
  "successMessage": "Merci ! Votre message a été envoyé avec succès. Nous vous contacterons bientôt.",
  "errorMessage": "Oups ! Une erreur s'est produite. Veuillez réessayer.",
  "vtigerModuleType": "Leads",
  "vtigerMapping": {
    "firstname": "firstname",
    "lastname": "lastname",
    "email": "email",
    "phone": "phone",
    "company": "company",
    "website": "website",
    "leadsource": "leadsource",
    "message": "description"
  },
  "fields": [
  {
    "name": "lastname",
    "type": "text",
    "label": "Nom",
    "placeholder": "Votre nom",
    "required": true,
    "validation": {
      "minLength": 2,
      "maxLength": 50
    }
  },
  {
    "name": "firstname",
    "type": "text",
    "label": "Prénom",
    "placeholder": "Votre prénom",
    "required": true,
    "validation": {
      "minLength": 2,
      "maxLength": 50
    }
  },
  {
    "name": "phone",
    "type": "tel",
    "label": "Mobile",
    "placeholder": "+242 XX XXX XX XX",
    "required": false
  },
  {
    "name": "email",
    "type": "email",
    "label": "Email",
    "placeholder": "votre.email@exemple.com",
    "required": true,
    "description": "Nous ne partagerons jamais votre email"
  },
  {
    "name": "company",
    "type": "text",
    "label": "Compagnie",
    "placeholder": "Nom de votre entreprise",
    "required": false
  },
  {
    "name": "services",
    "type": "select",
    "label": "Quelle service vous interesse ?",
    "placeholder": "Sélectionnez une option",
    "required": false,
    "options": [
      {
        "value": "ui",
        "label": "Ui & Design"
      },
      {
        "value": "api",
        "label": "Api"
      },
      {
        "value": "dev",
        "label": "Application web"
      }
    ]
  },
  {
    "name": "budget",
    "type": "select",
    "label": "Quelle est votre budget ?",
    "placeholder": "Sélectionnez une option",
    "required": false,
    "options": [
      {
        "value": "1000",
        "label": "1000 - 5000"
      },
      {
        "value": "5000",
        "label": "5000 - 10000"
      },
      {
        "value": "10000",
        "label": "10000 - 15000"
      }
    ]
  },
  {
    "name": "message",
    "type": "textarea",
    "label": "Votre message",
    "placeholder": "Décrivez votre demande en détail...",
    "required": true,
    "description": "Minimum 10 caractères",
    "validation": {
      "minLength": 10,
      "maxLength": 1000
    }
  }
],
  "displayConfig": {
  "layout": "one-columns",
  "containerClassName": "max-w-3xl mx-auto",
  "fieldsClassName": "grid grid-cols-1 md:grid-cols-2 gap-4"
}
}
