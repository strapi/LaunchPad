# Server Configuration
NODE_ENV=development
PORT=4000
HOST=0.0.0.0

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_NETWORK=peter-sung-agent-network
AGENT_CONTAINER_IMAGE=openhands/openhands-runtime:latest

# OpenHands Configuration
OPENHANDS_WORKSPACE_DIR=/tmp/openhands-workspaces
OPENHANDS_MAX_CONCURRENT_AGENTS=10
OPENHANDS_AGENT_TIMEOUT=300000

# LLM Providers
ANTHROPIC_API_KEY=
GOOGLE_GENERATIVE_AI_API_KEY=
OPENAI_API_KEY=

# Strapi Integration
STRAPI_URL=http://localhost:1337
STRAPI_API_TOKEN=

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this
NEXTAUTH_SECRET=your-super-secret-nextauth-key-change-this
NEXTAUTH_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/agent-server.log

# Feature Flags
ENABLE_VOICE_INPUT=false
ENABLE_IMAGE_UPLOAD=false
ENABLE_FILE_ATTACHMENTS=false
